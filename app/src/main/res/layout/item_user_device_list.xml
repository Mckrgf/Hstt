<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_terminal_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/x48"
    android:layout_marginLeft="@dimen/x30"
    android:layout_marginRight="@dimen/x30"
    android:background="@drawable/function_gray_selector"
    android:clickable="true"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_device_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y24"
        android:text="设备类型:"
        android:textSize="@dimen/x36" />
    <TextView
        android:id="@+id/tv_device_type_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y24"
        android:hint="设备类型11"
        android:textColor="@color/black"
        android:textSize="@dimen/x36"/>
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_if_uoload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y24"
            android:text="设备编号:"
            android:textSize="@dimen/x36" />


        <TextView
            android:id="@+id/tv_device_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y24"
            android:hint="123456"
            android:textColor="@color/black"
            android:textSize="@dimen/x36"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_device_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y24"
            android:layout_marginBottom="@dimen/x5"
            android:text="资产编号:"
            android:textSize="@dimen/x36" />


        <TextView
            android:id="@+id/tv_device_status_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y24"
            android:layout_marginBottom="@dimen/x5"
            android:hint="已调试"
            android:textSize="@dimen/x36"
            android:textColor="@color/black" />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"/>

        <Button
            android:gravity="center"
            android:id="@+id/bt_edit"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/y58"
            android:background="@drawable/text_radius_left_trans"
            android:text="编辑"
            android:textColor="@color/blue_submit"
            android:textSize="@dimen/x42"
            android:layout_marginRight="@dimen/x15"/>

        <Button
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/bt_delete"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/y58"
            android:background="@drawable/text_radius_left_trans"
            android:text="删除"
            android:textColor="@color/blue_submit"
            android:textSize="@dimen/x42"/>
    </LinearLayout>





    <View
        android:id="@+id/view_nothing"
        android:layout_width="0dp"
        android:layout_height="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide_gray" />

</LinearLayout>