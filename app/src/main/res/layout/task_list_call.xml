<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_title"
            android:textSize="@dimen/x42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y45"
            android:layout_marginBottom="@dimen/y75"
            android:text="是否拨打电话?" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_marginRight="@dimen/x30"
        android:layout_marginLeft="@dimen/x30"
        android:id="@+id/rl_call_a"
        android:background="@drawable/background_gray_et_shape"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120">

        <TextView
            android:id="@+id/tv_contact_phone"
            android:textSize="@dimen/x45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/x20"
            android:text="13333333333?"
            android:textColor="@color/blue_submit" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_marginRight="@dimen/x30"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y30"
        android:layout_marginBottom="@dimen/y30"
        android:id="@+id/rl_call_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:background="@drawable/ellips_button_gray_selector">

        <TextView
            android:layout_centerInParent="true"
            android:textSize="@dimen/x45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="@color/white" />

    </RelativeLayout>

</LinearLayout>