<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/quipment_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y30"
                android:text="设备信息: "
                android:textColor="@color/tv_text_black"
                android:textSize="@dimen/x45" />

            <TextView
                android:id="@+id/tv_equipment_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y30"
                android:textColor="@color/tv_text_black"
                android:textSize="@dimen/x45" />
        </LinearLayout>



        <LinearLayout
            android:layout_marginBottom="@dimen/y30"
            android:layout_marginTop="@dimen/y24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/equipment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:scrollbars="vertical"
                android:text="设备故障信息: "
                android:textColor="@color/tv_text_black"
                android:textSize="@dimen/x45" />
            <TextView
                android:id="@+id/tv_equipment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:scrollbars="vertical"
                android:text="设备故障信息"
                android:textColor="@color/tv_text_black"
                android:textSize="@dimen/x45" />
        </LinearLayout>



    </LinearLayout>

    <View
        android:id="@+id/divide_b"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/ll_content"
        android:layout_marginTop="@dimen/y10"
        android:background="@color/divider_color" />

    <RelativeLayout
        android:id="@+id/ll_contract_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divide_b"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:text="联系人: "
            android:textColor="@color/tv_text_black"
            android:textSize="@dimen/x45" />

        <TextView
            android:layout_toRightOf="@+id/contact"
            android:id="@+id/tv_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:text="联系人姓名"
            android:textColor="@color/tv_text_black"
            android:textSize="@dimen/x45" />

        <TextView
            android:id="@+id/contact_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_contact"
            android:layout_marginTop="@dimen/y24"
            android:text="联系方式: "
            android:textColor="@color/tv_text_black"
            android:textSize="@dimen/x45" />

        <TextView
            android:layout_toRightOf="@+id/contact_phone"
            android:id="@+id/tv_contact_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_contact"
            android:layout_marginTop="@dimen/y24"
            android:text="1333333333"
            android:textColor="@color/tv_text_black"
            android:textSize="@dimen/x45" />

        <TextView
            android:id="@+id/contact_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_contact_phone"
            android:layout_marginTop="@dimen/y24"
            android:maxLines="1"
            android:text="用户地址: "
            android:textColor="@color/tv_text_black"
            android:textSize="@dimen/x45" />

        <TextView
            android:layout_toRightOf="@+id/contact_addr"
            android:id="@+id/tv_contact_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_contact_phone"
            android:layout_marginTop="@dimen/y24"
            android:maxLines="1"
            android:text="用户地址"
            android:textColor="@color/tv_text_black"
            android:textSize="@dimen/x45" />

        <ImageView
            android:id="@+id/iv_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/y30"
            android:padding="@dimen/x30"
            android:src="@drawable/takephone" />
    </RelativeLayout>

    <View
        android:id="@+id/divide_c"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/ll_contract_info"
        android:layout_marginTop="@dimen/y30"
        android:background="@color/divide_gray" />



</LinearLayout>