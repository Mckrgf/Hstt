<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_terminal_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/function_gray_selector"
    android:clickable="true">

    <RelativeLayout
        android:visibility="gone"
        android:layout_alignTop="@+id/ll_content"
        android:layout_alignBottom="@+id/ll_content"
        android:id="@+id/rl_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_trans" >

        <Button
            android:layout_margin="@dimen/y20"
            android:id="@+id/bt_delete"
            android:gravity="center"
            android:paddingTop="@dimen/y35"
            android:drawableTop="@drawable/ic_delete"
            android:background="@drawable/halfcircle_blue_bt_shape"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/y180"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/x42"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
        android:paddingTop="@dimen/x48"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_terminal_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/y24"
            android:text="用户地址用户地址用户地址用户地址用户地址用户地址用户地址用户地址"
            android:textColor="@color/black"
            android:textSize="@dimen/x42"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_if_uoload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y24"
                android:text="当前状态:"
                android:textSize="@dimen/x36" />


            <TextView
                android:id="@+id/tv_if_uoload_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y24"
                android:text="已上报"
                android:textColor="@color/blue_submit"
                android:textSize="@dimen/x36" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_device_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y24"
                android:text="用户编码:"
                android:textSize="@dimen/x36"
                android:layout_marginBottom="@dimen/x5" />


            <TextView
                android:id="@+id/tv_device_status_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y24"
                android:text="1234567890"
                android:textSize="@dimen/x36"
                android:textColor="@color/black" />

            <TextView
                android:visibility="invisible"
                android:layout_marginLeft="@dimen/x60"
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y24"
                android:text="09:02"
                android:textSize="@dimen/x36" />

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"/>

            <Button
                android:gravity="center"
                android:id="@+id/bt_edit"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/y58"
                android:background="@drawable/text_radius_left_trans"
                android:text="编辑"
                android:textColor="@color/blue_submit"
                android:textSize="@dimen/x42"/>
        </LinearLayout>


        <View
            android:id="@+id/view_nothing"
            android:layout_width="0dp"
            android:layout_height="16dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divide_gray" />
    </LinearLayout>


</RelativeLayout>