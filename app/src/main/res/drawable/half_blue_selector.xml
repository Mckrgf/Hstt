<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <padding android:bottom="@dimen/x10"
                android:top="@dimen/x10"
                android:right="@dimen/x10"
                android:left="@dimen/x10"/>
            <stroke android:width="1dp" android:color="@color/blue_submit" />
            <solid android:color="@color/blue_submit" />
            <corners android:radius="360px" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <padding android:bottom="@dimen/x10"
                android:top="@dimen/x10"
                android:right="@dimen/x10"
                android:left="@dimen/x10"/>
            <stroke android:width="1dp" android:color="@color/blue_submit" />
            <solid android:color="@color/blue_submit" />
            <corners android:radius="360px" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding android:bottom="@dimen/x10"
                android:top="@dimen/x10"
                android:right="@dimen/x10"
                android:left="@dimen/x10"/>
            <stroke android:width="1dp" android:color="@color/blue_submit" />
            <solid android:color="@color/white" />
            <corners android:radius="360px" />
        </shape>
    </item>
</selector>