<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" >
        <shape >

            <solid android:color="@color/item_build_default_press" />

            <stroke android:width="1dp" android:color="@color/item_build_default_press" />
            <corners android:bottomRightRadius="@dimen/x15" android:bottomLeftRadius="@dimen/x15"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>

            <solid android:color="@color/item_build_default_press" />

            <stroke android:width="1dp" android:color="@color/item_build_default_press" />
            <corners android:bottomRightRadius="@dimen/x15" android:bottomLeftRadius="@dimen/x15"/>
        </shape>
    </item>
    <item >
        <shape>

            <solid android:color="@color/item_build_default_normal" />

            <stroke android:width="1dp" android:color="@color/item_build_default_normal" />
            <corners android:bottomRightRadius="@dimen/x15" android:bottomLeftRadius="@dimen/x15"/>

        </shape>
    </item>

</selector>