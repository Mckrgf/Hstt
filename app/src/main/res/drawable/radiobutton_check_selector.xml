<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <padding android:bottom="@dimen/x20"/>
            <padding android:top="@dimen/x20"/>
            <padding android:left="@dimen/x20"/>
            <padding android:right="@dimen/x20"/>
            <solid android:color="@color/transparent"></solid>
            <stroke android:color="@color/blue_submit" android:width="1dp"/>
            <corners android:radius="360px"/>

        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <padding android:bottom="@dimen/x20"/>
            <padding android:top="@dimen/x20"/>
            <padding android:left="@dimen/x20"/>
            <padding android:right="@dimen/x20"/>
            <solid android:color="@color/blue_submit"/>
            <stroke android:color="@color/blue_submit" android:width="1dp"/>
            <corners android:radius="360px"/>

        </shape>
    </item>

</selector>